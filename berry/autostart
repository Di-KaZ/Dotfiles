#!/bin/bash

# Update wallpaper and colors
bwal

# blur wal script
sh ~/Dotfiles/blur_bg.sh &

#start input manager
sxhkd -c ~/.config/berry/sxhkdrc &

#start bar
sh ~/.config/bar/launchbar.sh

# set berry color
sh ~/.cache/wal/berrycolor

# Set decoration geometry
berryc border_width         7
berryc inner_border_width   0
berryc top_gap              20
berryc title_height         20

# Other options
berryc smart_place "true"
berryc draw_text   "false"
berryc edge_lock   "true"
berryc set_font    "Ticketing"

# Wifi-tray
nm-applet &

# Filter
redshift &

# Compton (just prevent clipping when updating berry appearance)
compton &